<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.github.ArthurDeFaria</groupId>
    <artifactId>conversor-moeda</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>

    <name>ConversorMoedaComponent</name>
    <description>Componente Java para convers√£o de moedas</description>
    <url>https://github.com/ArthurDeFaria/conversor-moeda</url>

    <licenses>
        <license>
            <name>The Apache License, Version 2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0</url>
        </license>
    </licenses>

    <scm>
        <url>https://github.com/ArthurDeFaria/conversor-moeda</url>
        <connection>scm:git:https://github.com/ArthurDeFaria/conversor-moeda.git</connection>
        <developerConnection>scm:git:git@github.com:ArthurDeFaria/conversor-moeda.git</developerConnection>
    </scm>

    <developers>
        <developer>
            <id>arthur</id>
            <name>Arthur de Faria</name>
            <email>arthur_de_faria@outlook.com</email>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <groupId>io.github.lifveras</groupId>
            <artifactId>bredeco_pic_abstract</artifactId>
            <version>1.0.0</version>
        </dependency>
    </dependencies>

    <distributionManagement>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://s01.oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>ossrh</id>
            <url>https://s01.oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.2.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.3.1</version>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-gpg-plugin</artifactId>
                <version>3.0.1</version>
                <executions>
                    <execution>
                        <id>sign-artifacts</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>sign</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <keyname>D53455B538C972F41ECD1B3B3103990C29F973C2</keyname>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
